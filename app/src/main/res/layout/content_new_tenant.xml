<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_tenant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lingoville.meridian.TenantEditActivity"
    tools:showIn="@layout/activity_new_tenant">

    <!-- Room number field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:text="Room Number       :"
            style="@style/CategoryStyle"  />
        <TextView
            android:id="@+id/newTenant_RoomNumber"
            style="@style/EditorFieldStyle" />
    </LinearLayout>

    <!-- First Name field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:text="First Name             :"
            style="@style/CategoryStyle"  />
        <EditText
            android:id="@+id/newTenant_firstName"
            android:inputType="textCapWords"
            android:hint="John"
            android:ems="10"
            style="@style/EditorFieldStyle" />
    </LinearLayout>

    <!-- Last Name field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:text="Last Name             :"
            style="@style/CategoryStyle"  />

        <EditText
            android:id="@+id/newTenant_lastName"
            android:inputType="textCapWords"
            android:hint="Smith"
            android:ems="10"
            style="@style/EditorFieldStyle" />
    </LinearLayout>

    <!-- Phone Number field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:text="Phone Number      :"
            style="@style/CategoryStyle"  />
        <EditText
            android:id="@+id/newTenant_PhoneNumber"
            android:inputType="phone"
            android:digits="0123456789+"
            android:hint="XXX-XXX-XXXX"
            style="@style/EditorFieldStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <TextView
            android:text="Email Address       :"
            style="@style/CategoryStyle"  />
        <EditText
            android:id="@+id/newTenant_Email"
            android:inputType="textEmailAddress"
            android:hint="John.Smith@gmail.com"
            style="@style/EditorFieldStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <TextView
            android:text="Move In Date         :  "
            style="@style/CategoryStyle"  />
        <TextView
            android:id="@+id/newTenant_MoveInDate"
            android:inputType="textCapWords"
            style="@style/EditorFieldStyle" />
    </LinearLayout>

        <!-- Move out Date field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:text="Move Out Date      :  "
                style="@style/CategoryStyle"  />

            <TextView
                android:id="@+id/newTenant_MoveOutDate"
                android:inputType="textCapWords"
                style="@style/EditorFieldStyle"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/SaveTenant"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/CancelTenant"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cancel"/>

    </LinearLayout>


</LinearLayout>
