<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:fillViewport="true"
        tools:ignore="UselessParent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:isScrollContainer="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:text="Enter Your Name"
                    style="@style/RegisterTitleStyle"  />
                <TextView
                    android:text="This name will uses for communicate with all the tenant"
                    style="@style/RegisterDescriptionStyle"  />
            </LinearLayout>

            <!-- First Name field -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/register_firstName"
                    android:hint="@string/register_firstName"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in"
                    style="@style/RegisterEditorFieldStyle" />
            </android.support.design.widget.TextInputLayout>

            <!-- Last Name field -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/register_lastName"
                    android:hint="@string/register_lastName"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in"
                    style="@style/RegisterEditorFieldStyle" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/name_before"
                    android:text="Before"
                    android:layout_marginRight="10dp"
                    style="@style/RegisterFragmentButtonStyle"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/name_next"
                    android:text="Next"
                    android:layout_marginRight="10dp"
                    style="@style/RegisterFragmentButtonStyle"/>
            </LinearLayout>

        </LinearLayout>
</ScrollView>

